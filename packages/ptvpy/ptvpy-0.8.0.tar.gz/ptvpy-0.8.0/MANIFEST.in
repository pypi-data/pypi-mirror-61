# Top-level
include *.rst
include LICENSE.txt
include MANIFEST.in
include versioneer.py

# Package
recursive-include src *.py *.toml

# Tests
recursive-include test *.py

# Docs
recursive-include doc *.py *.rst *.css *.js *.png *.html
prune doc/_generated

# Don't ever include this
prune build
prune */__pycache__
global-exclude *.pyc *.pyo *.pyd *~
