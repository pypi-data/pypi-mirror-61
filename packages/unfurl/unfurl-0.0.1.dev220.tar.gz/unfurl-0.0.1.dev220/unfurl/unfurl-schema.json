{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "https://www.onecommons.org/schemas/unfurl/project-v1alpha1.json",
  "title": "unfurl.yaml",
  "description": "Unfurl configuration file",
  "type": "object",
  "properties": {
    "unfurl": {
      "type": "object",
      "properties": {
        "version": { "$ref": "./manifest-schema.json#/definitions/version" }
      },
      "required": ["version"]
    },
    "manifests": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "file": { "type": "string" },
          "default": { "type": "boolean" },
          "local": { "$ref": "./manifest-schema.json#/definitions/import" },
          "secret": { "$ref": "./manifest-schema.json#/definitions/import" }
        },
        "required": ["file"]
      }
    },
    "defaults": {
      "type": "object",
      "properties": {
        "local": { "$ref": "./manifest-schema.json#/definitions/import" },
        "secret": { "$ref": "./manifest-schema.json#/definitions/import" }
      }
    }
  },
  "required": ["unfurl"]
}
