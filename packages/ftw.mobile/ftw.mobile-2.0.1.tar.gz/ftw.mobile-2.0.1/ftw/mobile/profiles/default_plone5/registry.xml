<registry>

  <records prefix="plone.resources/ftw.mobile-handlebars-js"
           interface="Products.CMFPlone.interfaces.IResourceRegistry">
    <value key="js">++resource++ftw.mobile/js/handlebars.js</value>
    <value key="deps">jquery</value>
  </records>

  <records prefix="plone.resources/ftw.mobile-navigation-button-js"
           interface="Products.CMFPlone.interfaces.IResourceRegistry">
    <value key="js">++resource++plone.app.jquery.js</value>
    <value key="deps">jquery</value>
  </records>

  <records prefix="plone.resources/ftw.mobile-handlebars-js"
           interface="Products.CMFPlone.interfaces.IResourceRegistry">
    <value key="js">++resource++ftw.mobile/js/simple-buttons.js</value>
    <value key="deps">jquery</value>
  </records>

  <records prefix="plone.resources/ftw.mobile-hammer-js"
           interface="Products.CMFPlone.interfaces.IResourceRegistry">
    <value key="js">++resource++ftw.mobile/js/hammer.js</value>
    <value key="deps">jquery</value>
  </records>

  <records prefix="plone.bundles/ftw-mobile-resources"
           interface="Products.CMFPlone.interfaces.IBundleRegistry">
    <value key="resources">
      <element>ftw.mobile-navigation-button-js</element>
      <element>ftw.mobile-handlebars-js</element>
      <element>ftw.mobile-hammer-js</element>
    </value>

    <value key="enabled">True</value>
    <value key="depends">plone-legacy</value>
    <value key="compile">False</value>
    <value key="jscompilation">++plone++ftw.events/ftw-mobile-compiled.js</value>
  </records>
</registry>
