<tryton>
    <data>

        <!-- forms -->
        <record model="ir.ui.view" id="presence_view_form">
            <field name="model">employee_timetracking.presence</field>
            <field name="type">form</field>
            <field name="name">presence_form</field>
        </record>
        <record model="ir.ui.view" id="presence_view_tree">
            <field name="model">employee_timetracking.presence</field>
            <field name="type">tree</field>
            <field name="name">presence_tree</field>
        </record>

        <!-- action view -->
        <record model="ir.action.act_window" id="act_presence_form">
            <field name="name">Type of presence</field>
            <field name="res_model">employee_timetracking.presence</field>
        </record>
        <record model="ir.action.act_window.view" id="act_presence_form1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="presence_view_tree"/>
            <field name="act_window" ref="act_presence_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_presence_form2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="presence_view_form"/>
            <field name="act_window" ref="act_presence_form"/>
        </record>

        <!-- menu item -->
        <menuitem parent="menu_cfg_timetracking" action="act_presence_form"
                sequence="40" id="menu_config_presence" icon="tryton-list"/>

        <!-- deny access -->
        <record model="ir.model.access" id="access_presence_anon">
            <field name="model" search="[('model', '=', 'employee_timetracking.presence')]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <!-- access rule group -->
        <record model="ir.rule.group" id="rule_group_presence_anon">
            <field name="model" search="[('model', '=', 'employee_timetracking.presence')]"/>
            <field name="global_p" eval="False"/>
            <field name="default_p" eval="True"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.rule" id="rule_group_presence_anon_line1">
            <field name="domain" pyson="1" eval="[]" />
            <field name="rule_group" ref="rule_group_presence_anon"/>
        </record>

    </data>
</tryton>
