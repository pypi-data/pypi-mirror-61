<form col="4">
    <group id="grpdat" col="2" colspan="2" string="Presence time">
        <label name="employee"/>
        <field name="employee"/>
        <label name="presence"/>
        <field name="presence" widget="selection"/>
        <label name="startpos"/>
        <field name="startpos"/>
        <label name="endpos"/>
        <field name="endpos"/>
    </group>
    <group id="grpstate" col="2" colspan="2" string="State" yfill="1">
        <label name="state"/>
        <field name="state"/>
        <group id="grpbtn" col="3" colspan="2">
            <button name="wfcreate" string="Edit" icon="tryton-forward"/>
            <button name="wfexamine" string="Examine" icon="tryton-forward"/>
            <button name="wflock" string="Lock" icon="tryton-forward"/>
        </group>
    </group>
    <field name="accountitem" colspan="4"/>
    <group id="grphelp" colspan="4" string="Information" col="1">
        <label id="lab1" xalign="0.0" string="Presence time is the period of activity entered by the employee."/>
        <label id="lab2" xalign="0.0" string="The type of presence is used to assign the presence time to the time accounts."/>
        <label id="lab3" xalign="0.0" string="The assignment of the current presence time to the time accounts is done by the button 'Examine'."/>
        <label id="lab4" xalign="0.0" string="The list of time account items shows the assignment of the current attendance time to the time accounts."/>
    </group>
    <field name="is_eval_locked"/>
</form>
