<form col="2">
    <group id="grpdat" col="4" string="Account Item">
        <label name="employee"/>
        <field name="employee"/>
        <newline/>
        <label name="period"/>
        <field name="period"/>
        <label name="account"/>
        <field name="account"/>
        <label name="accountrule"/>
        <field name="accountrule"/>
        <newline/>
        <label name="startpos"/>
        <field name="startpos"/>
        <label name="endpos"/>
        <field name="endpos"/>
        <label name="duration"/>
        <field name="duration"/>
        <label name="weekday"/>
        <field name="weekday"/>    
    </group>
    <group id="grpstate" col="2" string="State" yfill="1">
        <label name="state"/>
        <field name="state"/>
        <group id="grpbtn" col="3" colspan="2">
            <button name="wfcreate" string="Create" icon="tryton-forward"/>
            <button name="wfexamine" string="Examine" icon="tryton-forward"/>
            <button name="wflock" string="Lock" icon="tryton-forward"/>
        </group>
    </group>
    <group id="grphelp" colspan="2" col="1" string="Information">
        <label id="lab1" xalign="0.0" string="The time account entry is the time used to calculate the time worked."/>
        <label id="lab2" xalign="0.0" string="The assignment of the presence time to the various time accounts is based on the tariff model."/>
    </group>
    <field name="is_eval_locked"/>
</form>
