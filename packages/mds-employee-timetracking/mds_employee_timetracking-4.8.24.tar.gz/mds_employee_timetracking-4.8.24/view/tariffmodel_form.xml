<form col="2">
    <group string="Description" id="grpdesc" col="2" colspan="2">
        <group id="grpname" col="4">
            <label name="name"/>
            <field name="name"/>
            <label name="shortname"/>
            <field name="shortname"/>
        </group>
        <group id="grpcomp" col="2">
            <label name="company"/>
            <field name="company"/>
        </group>
    </group>
    <notebook>
        <page id="pgaccrule" string="Account rule" col="2">
            <label name="main_timeaccount"/>
            <field name="main_timeaccount" widget="selection"/>
            <field name="accountrule" colspan="2"/>
        </page>
        <page id="pgbrktime" string="Break time rule">
            <field name="breaktime"/>
        </page>
        <page id="pgpresence" string="Type of Presence" col="4">
            <label name="type_present"/>
            <field name="type_present" widget="selection"/>
            <newline/>
            <field name="presence" colspan="4"/>
        </page>
        <page id="pgempl" string="Used by Employees">
            <field name="employees"/>
        </page>
    </notebook>
</form>
