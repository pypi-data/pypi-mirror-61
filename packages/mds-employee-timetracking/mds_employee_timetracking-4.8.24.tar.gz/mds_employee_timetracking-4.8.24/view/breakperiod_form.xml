<form col="4">
    <group id="grpdat" col="2" colspan="2" string="Break time">
        <label name="employee"/>
        <field name="employee"/>
        <label name="startpos"/>
        <field name="startpos"/>
        <label name="endpos"/>
        <field name="endpos"/>
    </group>
    <group id="grpstate" col="2" colspan="2" string="State" yfill="1">
        <label name="state"/>
        <field name="state"/>
        <group id="grpbtn" col="3" colspan="2">
            <button name="wfcreate" string="Edit" icon="tryton-go-next"/>
            <button name="wfexamine" string="Examine" icon="tryton-go-next"/>
            <button name="wflock" string="Lock" icon="tryton-go-next"/>
        </group>
    </group>
    <group id="grphelp" colspan="4" string="Information" col="1">
        <label id="lab1" xalign="0.0" string="Break time is the period of pause entered by the employee."/>
    </group>
    <field name="is_eval_locked"/>
</form>
