<form col="2">
    <group id="grpleft" col="1">
        <group id="grpemplo" col="4">
            <label name="company"/>
            <field name="company"/>
        </group>

        <group id="grpparty" col="4" string="select/create party">
            <label name="partymethod"/>
            <field name="partymethod" colspan="3"/>
            <label name="pty_sel"/>
            <field name="pty_sel" colspan="3"/>
            <separator id="sepparty1" colspan="4" string="Name and address"/>
            <label name="pty_name"/>
            <field name="pty_name" colspan="3"/>
            <label name="pty_address"/>
            <field name="pty_address" colspan="3"/>
            <label name="pty_zip"/>
            <field name="pty_zip"/>
            <label name="pty_city"/>
            <field name="pty_city"/>
            <label name="pty_country"/>
            <field name="pty_country"/>
            <label name="pty_subdivision"/>
            <field name="pty_subdivision"/>
            <separator id="sepparty2" colspan="4" string="Contact Mechanisms"/>
            <label name="pty_phone"/>
            <field name="pty_phone"/>
            <label name="pty_mobile"/>
            <field name="pty_mobile"/>
            <label name="pty_fax"/>
            <field name="pty_fax"/>
            <label name="pty_email"/>
            <field name="pty_email"/>
        </group>

        <group id="grpuser" col="4" string="Tryton user">
            <label name="usr_ena"/>
            <field name="usr_ena"/>
            <newline />
            <label name="usr_method"/>
            <field name="usr_method"/>
            <label name="usr_sel"/>
            <field name="usr_sel"/>
            <label name="usr_login"/>
            <field name="usr_login"/>
            <label name="usr_passwd"/>
            <field name="usr_passwd"/>
        </group>
    </group>
    
    <group id="grpright" col="1" yfill="1">
        <group id="grpcontract" col="2" string="Contract data">
            <label name="startdate"/>
            <field name="startdate"/>
            <label name="enddate"/>
            <field name="enddate"/>
            <separator id="sepwt" colspan="2" string="Work time/Holidays"/>
            <label name="worktime"/>
            <field name="worktime" widget="selection"/>
            <label name="tariff"/>
            <field name="tariff" widget="selection"/>
            <newline/>
            <label name="holidays"/>
            <field name="holidays"/>
            <label name="specleave"/>
            <field name="specleave"/>
        </group>

        <group col="2" string="Calendar" id="grpcal">
            <label name="cal_create"/>
            <field name="cal_create"/>
            <label name="cal_titlefmt"/>
            <field name="cal_titlefmt"/>
            <label name="cal_titletext"/>
            <field name="cal_titletext"/>
            <label name="cal_sel"/>
            <field name="cal_sel" widget="selection"/>

            <field name="calendars"/>
        </group>
    </group>

    <field name="parties"/>
    <field name="users"/>
    <field name="formmode"/>
    <field name="empl_sel" />
</form>
