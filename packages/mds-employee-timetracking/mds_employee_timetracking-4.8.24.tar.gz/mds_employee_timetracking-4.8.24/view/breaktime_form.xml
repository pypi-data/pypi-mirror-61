<form col="2">
    <group id="grpname" col="2" string="Description" yfill="1">
        <label name="name"/>
        <field name="name"/>
        <label name="shortname"/>
        <field name="shortname"/>
        <label name="tariff"/>
        <field name="tariff"/>
    </group>
    <group id="grprule" col="4" string="Deduction rule">
        <label id="labr1" colspan="4" xalign="0.0" 
            string="Range of working time in which the rule applies"/>
        <label name="mintime"/>
        <field name="mintime"/>
        <label name="maxtime"/>
        <field name="maxtime"/>
        <label id ="labr2" colspan="4" xalign="0.0" string="Syntax: 'hh:mm:ss' or 'hh:mm'"/>
        <label name="deduction"/>
        <field name="deduction"/>
    </group>
    <label id="lab01" colspan="2" xalign="0.0"
        string="The break regulation determines at which working hours a break time is deducted per day."/>
    <label id="lab02" colspan="2" xalign="0.0"
        string="The respective lower limit of the working time is not fallen below with the deduction."/>
    <label id="lab03" colspan="2" xalign="0.0"
        string="For example"/>
    <label id="lab04" colspan="2" xalign="0.0"
        string="- Working time: 4h 20 min, Rule: 4-5:59h / -30 min, reduced working hours: 4h"/>
    <label id="lab05" colspan="2" xalign="0.0"
        string="- Working time: 4h 50 min, Rule: 4-5:59h / -30 min, reduced working hours: 4h 20 min"/>
    <label id="lab06" colspan="2" xalign="0.0"
        string="- Working time: 6h 20 min, Rule: 6-7:59h / -60 min, reduced working hours: 6h"/>
</form>
