<tryton>
    <data>

        <!-- forms -->
        <record model="ir.ui.view" id="employee_view_form">
            <field name="model">company.employee</field>
            <field name="inherit" ref="company.employee_view_form"/>
            <field name="name">employee_view_form</field>
        </record>
        <record model="ir.ui.view" id="employee_view_tree">
            <field name="model">company.employee</field>
            <field name="inherit" ref="company.employee_view_tree"/>
            <field name="name">employee_view_tree</field>
        </record>

        <record model="ir.action.act_window" id="act_employee_form">
            <field name="name">Employees</field>
            <field name="res_model">company.employee</field>
            <field name="domain" eval="[('company', '=', Eval('company'))]" pyson="1"/>
        </record>
        <record model="ir.action.act_window.view" id="act_employee_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="company.employee_view_tree"/>
            <field name="act_window" ref="act_employee_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_employee_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="company.employee_view_form"/>
            <field name="act_window" ref="act_employee_form"/>
        </record>

        <menuitem parent="menu_timetracking" action="act_employee_form"
            id="menu_employee_form" icon="mds-timetracking-employees" sequence="40"/>

    </data>
</tryton>

