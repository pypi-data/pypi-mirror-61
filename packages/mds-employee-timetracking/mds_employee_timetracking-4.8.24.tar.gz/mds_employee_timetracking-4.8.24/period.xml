<tryton>
    <data>

        <!-- forms -->
        <record model="ir.ui.view" id="period_view_form">
            <field name="model">employee_timetracking.period</field>
            <field name="type">form</field>
            <field name="name">period_form</field>
        </record>
        <record model="ir.ui.view" id="period_view_tree">
            <field name="model">employee_timetracking.period</field>
            <field name="type">tree</field>
            <field name="name">period_tree</field>
        </record>
        <record model="ir.ui.view" id="period_view_calendar">
            <field name="model">employee_timetracking.period</field>
            <field name="type">calendar</field>
            <field name="name">period_calendar</field>
        </record>

        <!-- action view -->
        <record model="ir.action.act_window" id="act_period_form">
            <field name="name">Presence time</field>
            <field name="res_model">employee_timetracking.period</field>
        </record>
        <record model="ir.action.act_window.view" id="act_period_form1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="period_view_tree"/>
            <field name="act_window" ref="act_period_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_period_form2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="period_view_form"/>
            <field name="act_window" ref="act_period_form"/>
        </record>

        <!-- menu item -->
        <menuitem  action="act_period_form" parent="menu_timetracking"
                id="menu_period" icon="mds-timetracking-calendar1" sequence="50"/>

        <!-- calendar view -->
        <record model="ir.action.act_window" id="act_period_calendar">
            <field name="name">Calendar view</field>
            <field name="res_model">employee_timetracking.period</field>
        </record>
        <record model="ir.action.act_window.view" id="act_period_calendar1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="period_view_calendar"/>
            <field name="act_window" ref="act_period_calendar"/>
        </record>
        <record model="ir.action.act_window.view" id="act_period_calendar2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="period_view_form"/>
            <field name="act_window" ref="act_period_calendar"/>
        </record>
        <menuitem  action="act_period_calendar" parent="menu_period"
                id="menu_period_calendar" sequence="10"/>

        <!-- filter for current month/last month/all -->
        <record model="ir.action.act_window.domain" id="act_period_form_currentmonth">
            <field name="name">current month</field>
            <field name="sequence" eval="10"/>
            <field name="domain" eval="[('state_month', '=', 0)]" pyson="1"/>
            <field name="act_window" ref="act_period_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_period_form_lastmonth">
            <field name="name">last month</field>
            <field name="sequence" eval="20"/>
            <field name="domain" eval="[('state_month', '=', 1)]"  pyson="1"/>
            <field name="act_window" ref="act_period_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_period_form_all">
            <field name="name">all</field>
            <field name="sequence" eval="99"/>
            <field name="domain"/>
            <field name="act_window" ref="act_period_form"/>
        </record>

        <!-- deny access -->
        <record model="ir.model.access" id="access_period_anon">
            <field name="model" search="[('model', '=', 'employee_timetracking.period')]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <!-- access rule group -->
        <record model="ir.rule.group" id="rule_group_period_anon">
            <field name="model" search="[('model', '=', 'employee_timetracking.period')]"/>
            <field name="global_p" eval="False"/>
            <field name="default_p" eval="True"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.rule" id="rule_group_period_anon_line1">
            <field name="domain" pyson="1" eval="[]" />
            <field name="rule_group" ref="rule_group_period_anon"/>
        </record>

    </data>
</tryton>
