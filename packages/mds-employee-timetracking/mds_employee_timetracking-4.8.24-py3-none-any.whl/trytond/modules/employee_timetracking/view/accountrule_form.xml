<form col="2">
    <group id="grpname" colspan="2" col="6" string="Description">
        <label name="name"/>
        <field name="name"/>
        <label name="shortname"/>
        <field name="shortname"/>
        <label name="tariff"/>
        <field name="tariff" colspan="3"/>
        <field name="company"/>
    </group>
    <group id="grprule" col="4" string="Account rule">
        <label id="labr1" colspan="4" xalign="0.0" 
            string="Range of working time in which the rule applies, in the localtime of your company."/>
        <label name="mintime"/>
        <field name="mintime"/>
        <label name="maxtime"/>
        <field name="maxtime"/>
        <label id="labr2" colspan="2" string=" "/>
        <label id="labr3" colspan="2" string="Hint: 0:00 = 24:00 clock"/>
        <label id ="labr4" colspan="4" xalign="0.0" string="week days at which the rule applies"/>
        <group id="grpday" colspan="4" col="10">
            <label name="mon"/>
            <field name="mon"/>
            <label name="tue"/>
            <field name="tue"/>
            <label name="wed"/>
            <field name="wed"/>
            <label name="thu"/>
            <field name="thu"/>
            <label name="fri"/>
            <field name="fri"/>
            <label name="sat"/>
            <field name="sat"/>
            <label name="sun"/>
            <field name="sun"/>
            <label name="holiday"/>
            <field name="holiday" colspan="5"/>
        </group>
        <label id ="labr5" colspan="4" xalign="0.0" string="Presence type for which the rule applies"/>
        <label name="presence"/>
        <field name="presence" widget="selection"/>
    </group>
    <group  id="grprule" col="4" string="Target account and factor" yfill="1">
        <label id ="labr6" colspan="4" xalign="0.0" string="Factor for work time"/>        
        <label name="factor"/>
        <field name="factor"/>
        <label name="account"/>
        <field name="account" widget="selection"/>
    </group>
    <group id="grphelp" colspan="2" col="1" string="Information">
        <label id="labh1" xalign="0.0" string="The time account rule is executed when the employee ends a presence time."/>
        <label id="labh1" xalign="0.0" string="The account rule specifies:"/>
        <label id="labh2" xalign="0.0" string="- at what times of the day and on which days of the week the rule applies"/>
        <label id="labh3" xalign="0.0" string="- on which time account the working time is booked"/>
        <label id="labh4" xalign="0.0" string="- which factor is applied to the booked time"/>
        <label id="labh5" xalign="0.0" string="To apply a time account rule to an employee, add the rule to the employee's tariff model."/>
    </group>
</form>
