<tryton>
    <data>

        <!-- forms -->
        <record model="ir.ui.view" id="timeaccount_view_form">
            <field name="model">employee_timetracking.timeaccount</field>
            <field name="type">form</field>
            <field name="name">timeaccount_form</field>
        </record>
        <record model="ir.ui.view" id="timeaccount_view_tree">
            <field name="model">employee_timetracking.timeaccount</field>
            <field name="type">tree</field>
            <field name="name">timeaccount_tree</field>
        </record>

        <!-- action view -->
        <record model="ir.action.act_window" id="act_timeaccount_form">
            <field name="name">Time Account</field>
            <field name="res_model">employee_timetracking.timeaccount</field>
        </record>
        <record model="ir.action.act_window.view" id="act_timeaccount_form1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="timeaccount_view_tree"/>
            <field name="act_window" ref="act_timeaccount_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_timeaccount_form2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="timeaccount_view_form"/>
            <field name="act_window" ref="act_timeaccount_form"/>
        </record>

        <!-- menu item -->
        <menuitem parent="menu_cfg_timetracking" action="act_timeaccount_form"
                sequence="60" id="menu_config_timeaccount" icon="tryton-list"/>

        <!-- deny access -->
        <record model="ir.model.access" id="access_timeaccount_anon">
            <field name="model" search="[('model', '=', 'employee_timetracking.timeaccount')]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <!-- access rule group -->
        <record model="ir.rule.group" id="rule_group_timeaccount_anon">
            <field name="model" search="[('model', '=', 'employee_timetracking.timeaccount')]"/>
            <field name="global_p" eval="False"/>
            <field name="default_p" eval="True"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.rule" id="rule_group_timeaccount_anon_line1">
            <field name="domain" pyson="1" eval="[]" />
            <field name="rule_group" ref="rule_group_timeaccount_anon"/>
        </record>


        <!-- time account item -->
        <!-- forms -->
        <record model="ir.ui.view" id="timeaccountitem_view_form">
            <field name="model">employee_timetracking.timeaccountitem</field>
            <field name="type">form</field>
            <field name="name">timeaccountitem_form</field>
        </record>
        <record model="ir.ui.view" id="timeaccountitem_view_tree">
            <field name="model">employee_timetracking.timeaccountitem</field>
            <field name="type">tree</field>
            <field name="name">timeaccountitem_tree</field>
        </record>
        <record model="ir.ui.view" id="timeaccountitem_view_calendar">
            <field name="model">employee_timetracking.timeaccountitem</field>
            <field name="type">calendar</field>
            <field name="name">timeaccountitem_calendar</field>
        </record>

        <!-- action view -->
        <record model="ir.action.act_window" id="act_timeaccountitem_form">
            <field name="name">Time Account Item</field>
            <field name="res_model">employee_timetracking.timeaccountitem</field>
        </record>
        <record model="ir.action.act_window.view" id="act_timeaccountitem_form1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="timeaccountitem_view_tree"/>
            <field name="act_window" ref="act_timeaccountitem_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_timeaccountitem_form2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="timeaccountitem_view_form"/>
            <field name="act_window" ref="act_timeaccountitem_form"/>
        </record>

        <!-- menu item -->
        <menuitem parent="menu_timetracking" action="act_timeaccountitem_form"
                sequence="70" id="menu_timeaccountitem" icon="mds-timetracking-checklist"/>

        <!-- calendar view -->
        <record model="ir.action.act_window" id="act_timeaccountitem_calendar">
            <field name="name">Time Account Calendar</field>
            <field name="res_model">employee_timetracking.timeaccountitem</field>
        </record>
        <record model="ir.action.act_window.view" id="act_timeaccountitem_calendar1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="timeaccountitem_view_calendar"/>
            <field name="act_window" ref="act_timeaccountitem_calendar"/>
        </record>
        <record model="ir.action.act_window.view" id="act_timeaccountitem_calendar2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="timeaccountitem_view_form"/>
            <field name="act_window" ref="act_timeaccountitem_calendar"/>
        </record>
        <menuitem parent="menu_timeaccountitem" action="act_timeaccountitem_calendar"
                sequence="10" id="menu_timeaccountitem_calendar"/>
                
        <!-- filter for current month/last month/all -->
        <record model="ir.action.act_window.domain" id="act_timeaccountitem_form_currentmonth">
            <field name="name">current month</field>
            <field name="sequence" eval="10"/>
            <field name="domain" eval="[('state_month', '=', 0)]" pyson="1"/>
            <field name="act_window" ref="act_timeaccountitem_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_timeaccountitem_form_lastmonth">
            <field name="name">last month</field>
            <field name="sequence" eval="20"/>
            <field name="domain" eval="[('state_month', '=', 1)]"  pyson="1"/>
            <field name="act_window" ref="act_timeaccountitem_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_timeaccountitem_form_all">
            <field name="name">all</field>
            <field name="sequence" eval="99"/>
            <field name="domain"/>
            <field name="act_window" ref="act_timeaccountitem_form"/>
        </record>

        <!-- deny access -->
        <record model="ir.model.access" id="access_timeaccountitem_anon">
            <field name="model" search="[('model', '=', 'employee_timetracking.timeaccountitem')]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <!-- access rule group -->
        <record model="ir.rule.group" id="rule_group_timeaccountitem_anon">
            <field name="model" search="[('model', '=', 'employee_timetracking.timeaccountitem')]"/>
            <field name="global_p" eval="False"/>
            <field name="default_p" eval="True"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.rule" id="rule_group_timeaccountitem_anon_line1">
            <field name="domain" pyson="1" eval="[]" />
            <field name="rule_group" ref="rule_group_timeaccountitem_anon"/>
        </record>
        
    </data>
</tryton>
