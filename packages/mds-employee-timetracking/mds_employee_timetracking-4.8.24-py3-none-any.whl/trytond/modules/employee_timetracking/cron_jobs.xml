<tryton>
    <data>

        <record model="res.user-res.group" 
            id="user_trigger-group_cronjob">
            <field name="user" ref="res.user_trigger"/>
            <field name="group" ref="group_cronjob"/>
        </record>

        <!-- cron-job: recalc time accounts -->
        <record model="ir.cron" id="cron_recalc_timeaccounts">
            <field name="name">Work time tracking: Recalculation of the evaluations</field>
            <field name="request_user" ref="res.user_admin"/>
            <field name="user" ref="res.user_trigger"/>
            <field name="active" eval="True"/>
            <field name="interval_number" eval="5"/>
            <field name="interval_type">minutes</field>
            <field name="number_calls" eval="-1"/>
            <field name="repeat_missed" eval="False"/>
            <field name="model">employee_timetracking.evaluation</field>
            <field name="function">cron_recalc_evaluation</field>
        </record>

    </data>
</tryton>
