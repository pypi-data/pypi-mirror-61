<tryton>
    <data>

        <!-- wizard: create employee -->
        <record model="ir.action.wizard" id="act_createemployee_wizard">
            <field name="name">Create Employee</field>
            <field name="wiz_name">employee_timetracking.wizemployee_create</field>
        </record>
        <!-- view 'create employee' -->
        <record model="ir.ui.view" id="act_createemployee_wizard_form">
            <field name="model">employee_timetracking.wizemployee_create.start</field>
            <field name="type">form</field>
            <field name="name">employee_wizcreate_form</field>
        </record>

        <menuitem  action="act_createemployee_wizard" parent="menu_timetracking"
                id="menu_createemployee_wiz" icon="mds-timetracking-useradd"
                sequence="20"/>

        <record model="ir.action.wizard" id="act_createemployee_edit_wizard">
            <field name="name">Edit Employee</field>
            <field name="wiz_name">employee_timetracking.wizemployee_create</field>
        </record>
        <record model="ir.action.keyword" id="act_createemployee_edit_wizard_keyword1">
            <field name="keyword">form_action</field>
            <field name="model">company.employee,-1</field>
            <field name="action" ref="act_createemployee_edit_wizard"/>
        </record>

    </data>
</tryton>
