<tryton>
    <data>

        <!-- forms -->
        <record model="ir.ui.view" id="breaktime_view_form">
            <field name="model">employee_timetracking.breaktime</field>
            <field name="type">form</field>
            <field name="name">breaktime_form</field>
        </record>
        <record model="ir.ui.view" id="breaktime_view_tree">
            <field name="model">employee_timetracking.breaktime</field>
            <field name="type">tree</field>
            <field name="name">breaktime_tree</field>
        </record>

        <!-- action view -->
        <record model="ir.action.act_window" id="act_breaktime_form">
            <field name="name">Break time rule</field>
            <field name="res_model">employee_timetracking.breaktime</field>
        </record>
        <record model="ir.action.act_window.view" id="act_breaktime_form1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="breaktime_view_tree"/>
            <field name="act_window" ref="act_breaktime_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_breaktime_form2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="breaktime_view_form"/>
            <field name="act_window" ref="act_breaktime_form"/>
        </record>

        <!-- deny access -->
        <record model="ir.model.access" id="access_breaktime_anon">
            <field name="model" search="[('model', '=', 'employee_timetracking.breaktime')]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <!-- access rule group -->
        <record model="ir.rule.group" id="rule_group_breaktime_anon">
            <field name="model" search="[('model', '=', 'employee_timetracking.breaktime')]"/>
            <field name="global_p" eval="False"/>
            <field name="default_p" eval="True"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.rule" id="rule_group_breaktime_anon_line1">
            <field name="domain" pyson="1" eval="[]" />
            <field name="rule_group" ref="rule_group_breaktime_anon"/>
        </record>

    </data>
</tryton>
