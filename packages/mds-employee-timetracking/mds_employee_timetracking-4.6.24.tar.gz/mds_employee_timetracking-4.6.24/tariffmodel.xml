<tryton>
    <data>

        <!-- forms -->
        <record model="ir.ui.view" id="tariffmodel_view_form">
            <field name="model">employee_timetracking.tariffmodel</field>
            <field name="type">form</field>
            <field name="name">tariffmodel_form</field>
        </record>
        <record model="ir.ui.view" id="tariffmodel_view_tree">
            <field name="model">employee_timetracking.tariffmodel</field>
            <field name="type">tree</field>
            <field name="name">tariffmodel_tree</field>
        </record>

        <!-- action view -->
        <record model="ir.action.act_window" id="act_tariffmodel_form">
            <field name="name">Tariff model</field>
            <field name="res_model">employee_timetracking.tariffmodel</field>
        </record>
        <record model="ir.action.act_window.view" id="act_tariffmodel_form1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="tariffmodel_view_tree"/>
            <field name="act_window" ref="act_tariffmodel_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_tariffmodel_form2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="tariffmodel_view_form"/>
            <field name="act_window" ref="act_tariffmodel_form"/>
        </record>

        <!-- menu item -->
        <menuitem parent="menu_cfg_timetracking" action="act_tariffmodel_form"
                sequence="10" id="menu_config_tariffmodel" icon="tryton-list"/>

        <!-- deny access -->
        <record model="ir.model.access" id="access_tariffmodel_anon">
            <field name="model" search="[('model', '=', 'employee_timetracking.tariffmodel')]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <!-- access rule group -->
        <record model="ir.rule.group" id="rule_group_tariffmodel_anon">
            <field name="model" search="[('model', '=', 'employee_timetracking.tariffmodel')]"/>
            <field name="global_p" eval="False"/>
            <field name="default_p" eval="True"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.rule" id="rule_group_tariffmodel_anon_line1">
            <field name="domain" pyson="1" eval="[]" />
            <field name="rule_group" ref="rule_group_tariffmodel_anon"/>
        </record>

        <!-- relation: tariffmodel - presence -->
        <record model="ir.model.access" id="access_presencerel_anon">
            <field name="model" search="[('model', '=', 'employee_timetracking.presence_rel')]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>

    </data>
</tryton>
