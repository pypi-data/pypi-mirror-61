<tryton>
    <data>

        <!-- forms -->
        <record model="ir.ui.view" id="breakperiod_view_form">
            <field name="model">employee_timetracking.breakperiod</field>
            <field name="type">form</field>
            <field name="name">breakperiod_form</field>
        </record>
        <record model="ir.ui.view" id="breakperiod_view_tree">
            <field name="model">employee_timetracking.breakperiod</field>
            <field name="type">tree</field>
            <field name="name">breakperiod_tree</field>
        </record>
        <record model="ir.ui.view" id="breakperiod_view_calendar">
            <field name="model">employee_timetracking.breakperiod</field>
            <field name="type">calendar</field>
            <field name="name">breakperiod_calendar</field>
        </record>

        <!-- action view -->
        <record model="ir.action.act_window" id="act_breakperiod_form">
            <field name="name">Break time</field>
            <field name="res_model">employee_timetracking.breakperiod</field>
        </record>
        <record model="ir.action.act_window.view" id="act_breakperiod_form1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="breakperiod_view_tree"/>
            <field name="act_window" ref="act_breakperiod_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_breakperiod_form2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="breakperiod_view_form"/>
            <field name="act_window" ref="act_breakperiod_form"/>
        </record>

        <!-- menu item -->
        <menuitem  action="act_breakperiod_form" parent="menu_timetracking"
                id="menu_breakperiod2" icon="mds-coffee-cup" sequence="60"/>

        <!-- calendar view -->
        <record model="ir.action.act_window" id="act_breakperiod_calendar">
            <field name="name">Break time calendar</field>
            <field name="res_model">employee_timetracking.breakperiod</field>
        </record>
        <record model="ir.action.act_window.view" id="act_breakperiod_calendar1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="breakperiod_view_calendar"/>
            <field name="act_window" ref="act_breakperiod_calendar"/>
        </record>
        <record model="ir.action.act_window.view" id="act_breakperiod_calendar2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="breakperiod_view_tree"/>
            <field name="act_window" ref="act_breakperiod_calendar"/>
        </record>
        <menuitem  action="act_breakperiod_calendar" parent="menu_breakperiod2"
                id="menu_breakperiod_calendar" sequence="10"/>

        <!-- filter for current month/last month/all -->
        <record model="ir.action.act_window.domain" id="act_breakperiod_form_currentmonth">
            <field name="name">current month</field>
            <field name="sequence" eval="10"/>
            <field name="domain" eval="[('state_month', '=', 0)]" pyson="1"/>
            <field name="act_window" ref="act_breakperiod_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_breakperiod_form_lastmonth">
            <field name="name">last month</field>
            <field name="sequence" eval="20"/>
            <field name="domain" eval="[('state_month', '=', 1)]"  pyson="1"/>
            <field name="act_window" ref="act_breakperiod_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_breakperiod_form_all">
            <field name="name">all</field>
            <field name="sequence" eval="99"/>
            <field name="domain"/>
            <field name="act_window" ref="act_breakperiod_form"/>
        </record>

        <!-- deny access -->
        <record model="ir.model.access" id="access_breakperiod_anon">
            <field name="model" search="[('model', '=', 'employee_timetracking.breakperiod')]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <!-- access rule group -->
        <record model="ir.rule.group" id="rule_group_breakperiod_anon">
            <field name="model" search="[('model', '=', 'employee_timetracking.breakperiod')]"/>
            <field name="global_p" eval="False"/>
            <field name="default_p" eval="True"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.rule" id="rule_group_breakperiod_anon_line1">
            <field name="domain" pyson="1" eval="[]" />
            <field name="rule_group" ref="rule_group_breakperiod_anon"/>
        </record>

    </data>
</tryton>
