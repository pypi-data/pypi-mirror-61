<tryton>
    <data>

        <!-- work time model -->
        <!-- forms -->
        <record model="ir.ui.view" id="worktimemodel_view_form">
            <field name="model">employee_timetracking.worktimemodel</field>
            <field name="type">form</field>
            <field name="name">worktimemodel_form</field>
        </record>
        <record model="ir.ui.view" id="worktimemodel_view_tree">
            <field name="model">employee_timetracking.worktimemodel</field>
            <field name="type">tree</field>
            <field name="name">worktimemodel_tree</field>
        </record>

        <!-- action view -->
        <record model="ir.action.act_window" id="act_worktimemodel_form">
            <field name="name">Working time model</field>
            <field name="res_model">employee_timetracking.worktimemodel</field>
        </record>
        <record model="ir.action.act_window.view" id="act_worktimemodel_form1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="worktimemodel_view_tree"/>
            <field name="act_window" ref="act_worktimemodel_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_worktimemodel_form2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="worktimemodel_view_form"/>
            <field name="act_window" ref="act_worktimemodel_form"/>
        </record>

        <!-- menu item -->
        <menuitem parent="menu_cfg_timetracking" action="act_worktimemodel_form"
                sequence="20" id="menu_config_worktimemodel" icon="tryton-list"/>

        <!-- deny access -->
        <record model="ir.model.access" id="access_worktimemodel_anon">
            <field name="model" search="[('model', '=', 'employee_timetracking.worktimemodel')]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <!-- access rule group -->
        <record model="ir.rule.group" id="rule_group_worktimemodel_anon">
            <field name="model" search="[('model', '=', 'employee_timetracking.worktimemodel')]"/>
            <field name="global_p" eval="False"/>
            <field name="default_p" eval="True"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.rule" id="rule_group_worktimemodel_anon_line1">
            <field name="domain" pyson="1" eval="[]" />
            <field name="rule_group" ref="rule_group_worktimemodel_anon"/>
        </record>


        <!-- work time rule -->
        <!-- forms -->
        <record model="ir.ui.view" id="worktimerule_view_form">
            <field name="model">employee_timetracking.worktimerule</field>
            <field name="type">form</field>
            <field name="name">worktimerule_form</field>
        </record>
        <record model="ir.ui.view" id="worktimerule_view_tree">
            <field name="model">employee_timetracking.worktimerule</field>
            <field name="type">tree</field>
            <field name="name">worktimerule_tree</field>
        </record>

        <!-- deny access -->
        <record model="ir.model.access" id="access_worktimerule_anon">
            <field name="model" search="[('model', '=', 'employee_timetracking.worktimerule')]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <!-- access rule group -->
        <record model="ir.rule.group" id="rule_group_worktimerule_anon">
            <field name="model" search="[('model', '=', 'employee_timetracking.worktimerule')]"/>
            <field name="global_p" eval="False"/>
            <field name="default_p" eval="True"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.rule" id="rule_group_worktimerule_anon_line1">
            <field name="domain" pyson="1" eval="[]" />
            <field name="rule_group" ref="rule_group_worktimerule_anon"/>
        </record>

    </data>
</tryton>
